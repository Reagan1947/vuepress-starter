// 主题颜色
$accentColor = rgb(0, 112, 201);

// 英文字体 SF-Pro
@font-face {
    font-family: 'SF-Pro';
    src: url('/font/SF-Pro/SF-Pro-Text-Regular.otf');
    font-weight: normal;
    font-style: normal;
}

// 中文字体 苹方 PingFang
@font-face {
    font-family: 'PingFang-SC';
    src: url('/font/PingFang-SC/PingFang-Medium.ttf') format('truetype')
    font-weight: normal;
    font-style: normal;
}

// JetBrains-Mono 字体
@font-face {
    font-family: 'JetBrains-Mono';
    src: url('/font/JetBrainsMono/webfonts/JetBrainsMono-Regular.woff2') format('woff2')
    font-weight: normal;
    font-style: normal;
}

// 给 content 中的 li 元素增加 间隔
.theme-default-content li + li {
    margin-top: 7px;
}

.theme-default-content li, .theme-default-content ol, .theme-default-content ul {
    line-height: 1.6rem;
}

a.sidebar-link {
    font-weight: 500;
    color: #333!important;
}

body {
    /* Adjust font size */
    font-size: 16px;
    -webkit-text-size-adjust: 100%

     /* 文字平滑 */
    text-rendering: optimizeLegibility!important;
    -moz-osx-font-smoothing: grayscale;
    font-smoothing: antialiased!important;
    -webkit-font-smoothing: antialiased!important;

    font-family: 'SF-Pro', 'PingFang-SC', sans-serif;
    font-weight: 500;
    direction ltr;
    color: #333!important;
    text-align left;
}

.theme-default-content h2, .theme-default-content h3, .theme-default-content h4{
    margin-top: 1.3em!important;
    font-weight: 600!important;
    letter-spacing: .011em!important;
}

.theme-default-content ul {
    list-style: disc outside;
    margin-left: 1px;
    margin-top: 10px;
}

h3 {
    padding: 0!important;
}

// 二级标题上方
h2 {
    display: block;
    margin-block-start: 0.83em!important;
    padding: 0!important;
    margin-block-end: 0.83em;
    margin-inline-start: 0px;
    margin-inline-end: 0px;
    font-weight: bold;
}

// 三级标题上方
h3 {
    display: block;
    margin-block-start: 1em;
    margin-block-end: 1em;
    margin-inline-start: 0px;
    margin-inline-end: 0px;
    font-weight: bold;
}

// 覆盖 Chrome 等浏览器默认设置
.theme-default-content p {
    margin-block-start:0;
    margin-block-end: 0;
    line-height: 1.6;
    margin-top: 13px
}

svg[id*='mermaid_'] {
    margin-top: 13px;
}

mark {
    background-color: #3884ff;
    color: white;
    padding: 0.15rem 0.3rem;
    border-radius: 0.2rem;
    box-decoration-break: clone;
    -webkit-box-decoration-break: clone;
}

$contentWidth = 52rem; // 文章内容的宽度

